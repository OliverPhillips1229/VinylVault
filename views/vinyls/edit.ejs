<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/partials.css">
    <title>Edit Vinyl</title>
</head>
<body>
    <%- include('../partials/_navbar') %>
    <main>
        <img src="/logos/VinylVaultNoText.png" alt="VinylVault Logo" class="img-logo-medium"/>
        <h1>Edit Vinyl</h1>
        <form action="/vinyls/<%= vinyl._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="artist">Artist:</label>
                <input type="text" name="artist" id="artist" value="<%= vinyl.artist %>" required>
            </div>
            <div class="form-group">
                <label for="albumTitle">Album Title:</label>
                <input type="text" name="albumTitle" id="albumTitle" value="<%= vinyl.albumTitle %>" required>
            </div>
            <div class="form-group">
                <label for="genre">Genre:</label>
                <% const genres = ["Rock", "Pop", "Hip-Hop", "Jazz", "Electronic", "Classical", "Soul", "R&B", "Funk", "Folk", "Reggae", "Punk", "Country", "Indie", "Other"]; %>
                <select id="genre" name="genre" required>
                    <% genres.forEach(g => { %>
                        <option value="<%= g %>" <% if (vinyl.genre === g) { %>selected<% } %>><%= g %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="year">Year:</label>
                <input type="number" name="year" id="year" value="<%= vinyl.year %>" required>
            </div>
            <div class="form-group">
                <label for="coverArt">Cover Art URL:</label>
                <input type="url" name="coverArt" id="coverArt" value="<%= vinyl.coverArt %>">
            </div>
            <div class="form-group">
                <label for="notes">Notes:</label>
                <textarea name="notes" id="notes"><%= vinyl.notes %></textarea>
            </div>
            <div class="form-group">
                <label for="wishlist">Add to Wishlist:</label>
                <input type="checkbox" id="wishlist" name="wishlist" value="true" <%= vinyl.wishlist ? "checked" : "" %>>
            </div>
            <button type="submit">Update Vinyl</button>
            <img src="/svg/update-alt-svgrepo-com.svg" alt="Update Vinyl" class="img-logo-small">
        </form>
    </main>
</body>
</html>