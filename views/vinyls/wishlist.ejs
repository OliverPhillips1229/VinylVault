<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/partials.css">
    <title>Your Wishlist</title>
</head>

<body>
    <%- include('../partials/_navbar') %>

    <main>
        <img src="/logos/VinylVaultNoText.png" alt="VinylVault Logo" class="img-small"/>
        <h1>Your Wishlist</h1>
        <p>View the vinyls you wish to add to your collection.</p>

        <% if (vinyls.length > 0) { %>
            <ul>
                <% vinyls.forEach(vinyl => { %>
                    <li>
                        <strong><%= vinyl.albumTitle %></strong> by <%= vinyl.artist %>

                        <!-- Move to Collection Form -->
                        <form action="/vinyls/<%= vinyl._id %>/move-to-collection" method="POST" style="display:inline;">
                            <button type="submit">Move to Collection</button>
                            <img src="/svg/move-mail-svgrepo-com.svg" alt="Add to Collection" class="img-small">
                        </form>

                        <!-- Remove from Wishlist Form -->
                        <form action="/vinyls/<%= vinyl._id %>/wishlist" method="POST" style="display:inline;">
                            <input type="hidden" name="_method" value="DELETE" />
                            <button type="submit">Remove</button>
                            <img src="/svg/delete-svgrepo-com.svg" alt="Remove from Wishlist"class="img-small">
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>Your wishlist is empty.</p>
        <% } %>
    </main>
</body>
</html>
